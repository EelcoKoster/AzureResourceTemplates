{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "demoName": {
      "type": "string"
    },
    "demoType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_ZRS"
      ]
    },
    "demoLocation": {
      "type": "string",
      "defaultValue": "West US",
      "allowedValues": [
        "East US",
        "West US",
        "West Europe",
        "East Asia",
        "South East Asia"
      ]
    }
  },
  "variables": {
  },
  "resources": [
    {
      "name": "[parameters('demoName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[parameters('demoLocation')]",
      "apiVersion": "2015-05-01-preview",
      "dependsOn": [ ],
      "tags": {
        "displayName": "demo"
      },
      "properties": {
        "accountType": "[parameters('demoType')]"
      }
    }
  ],
  "outputs": {
    "storageKey": {
      "type": "string",
      "value": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('demoName')), '2015-05-01-preview').key1]"
    }
  }
}
